#!/bin/bash

# ****************************************************************************
# *                                                                          *
# *       Project: Earth Systems Grid Federation (ESGF) Data Node Software   *
# *  First Author: Gavin M. Bell (gavin@llnl.gov)                            *
# *                                                                          *
# ****************************************************************************
# 
#    Description:
# 
# A simple script to do a quick spot check on the system.  It simply
# pulls down the registration.xml of the nodes supplied, looks at each
# of the nodes in the registration and in turn pulls those
# registration.xml files giving a count of the known hosts in the
# respective registries.  As the program suggests a quick P2P 'spot
# check'. :-)

quick_check() {
    target_node=${1:-esgf-node3.llnl.gov}
    local peers
    local count=0    
    for site in $(curl -s -m 15 http://${target_node}/esgf-node-manager/registration.xml | sed -n 's#\(.*hostname="\)\([^"]*\)\(".*>\)#http://\2/esgf-node-manager/registration.xml#p'); do 
        echo -n "  [$((++count))] looking at site $site -> "
        if ((VERBOSE)); then
            peers=( $(curl -s -m ${time_out_secs:-3} ${site} | grep hostname | sed -n 's/.*hostname="\([^"]*\)".*$/\1/p' | xargs) )
            echo ${#peers[@]}
            for peer in ${peers[@]}; do
                echo "      $peer"
            done
        else
            curl -s -m ${time_out_secs:-3} $site | grep hostname | wc -l
        fi

    done;
}

spot_check() {
    local hosts=$@
    (( $# == 0 )) && _usage
    for host in ${hosts[@]}; do
        echo "Spot Checking [${host}]..."
        quick_check ${host}
    done
}

_usage() {
    echo "usage:"
    echo "  %> $0 <fqdn of server to inspect> [--timeout | -t <timeout seconds> ]"
    echo
    echo "Ex: spotcheck pcmdi9.llnl.gov"
    echo
    exit 1
}

############################################
# Main
############################################

while [ -n "$1" ]; do 
    case $1 in 
	-v | --version)
	    echo "Earth Systems Grid Federation (http://esgf.org)"
	    echo "ESGF P2P Spot Check Utility"
	    echo ""
	    exit 0
            ;;
        --verbose)
            VERBOSE=1;
            ;;
        --debug)
            DEBUG=1;
            ;;
        --timeout | -t)
            shift
            time_out_secs=${1};
            ;;
        --help | -h)
            _usage
            ;;
        *)
            spotcheck_hosts=( "${spotcheck_hosts[@]}" "$1" )
            ;;
    esac
    shift
done

spot_check ${spotcheck_hosts[@]}

